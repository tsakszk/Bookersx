<% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
          <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
<% end %>
<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <h3>Editing Book</h3>
    <%= form_for(@book) do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Update Book' ,class: "btn btn-primary btn-lg" %>
    <% end %>
    <%= link_to "Show", book_path(@book) %> |
    <%= link_to "Back", books_path %>
   </div>
  </div>
</div>

