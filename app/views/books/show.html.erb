<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.png"%>
    <table class="table table-striped">
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </table>
     <%= link_to "編集",edit_user_path(current_user.id)%><br>
     <h1>New book</h1>
      <%= form_for(@newbook) do |f| %>
     <h4>Title</h4>
      <%= f.text_field :title %>
     <h4>Opinion</h4>
      <%= f.text_area :body %><br>
      <%= f.submit 'Create Book',class: "btn btn-default" %>
    <% end %>
   </div>
   <h1>Book detail</h1>
   <div class="col-xs-9">
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.png"%>
    <table class="table table-striped">
     <%= link_to @user.name, user_path(@user.id) %>
     <%= link_to @book.title, book_path(@book.id) %>
     <%= @book.body%>
     <% if current_user == @user %>
     <%= link_to "Edit", edit_book_path(@book) %>
     <%= link_to "Destroy", book_path(@book), method: :delete,data: { confirm: "本当に消しますか？" } %>
     <% end %>
    </table>
   </div>
  </div>
</div>
