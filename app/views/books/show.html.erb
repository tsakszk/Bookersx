<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.png"%>
    <table class="table table-striped">
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </table>
     <div><%= link_to fa_icon("wrench 2x"),edit_user_path(@user), class: "col-xs-12 btn btn-default" %></div>
     <h1>New book</h1>
      <%= form_for(@newbook) do |f| %>
     <h4>Title</h4>
      <%= f.text_field :title, class: "col-xs-12" %>
     <h4>Opinion</h4>
      <%= f.text_area :body, class: "col-xs-12" %><br>
      <%= f.submit 'Create Book',class: "btn btn-primary btn-lg col-xs-12" %>
    <% end %>
   </div>

   <div class="col-xs-9">
   <h1>Book detail</h1>
    <table class="table table-striped">
      <tbody>
      <tr>
       <td>
       <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no-image-icon.jpg" %><br>
       <%= link_to @user.name, user_path(@user.id) %>
       </td>
       <td><%= link_to @book.title, book_path(@book.id) %></td>
       <td><%= @book.body%></td>
      <% if current_user == @user %>
       <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
       <td><%= link_to "Destroy", book_path(@book), method: :delete,data: { confirm: "本当に消しますか？" } ,class: "btn btn-danger" %></td>
      <% end %>
    </tbody>
    </table>
   </div>
  </div>
</div>
