<% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
        <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
     <ul>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
     </ul>
    </div>
<% end %>

<div class="container">
  <div class="row">
   <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image.png" %><br>
    <table class="table table-striped">
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
    </table>

    <% if current_user == @user %>
      <div><%= link_to fa_icon("wrench 2x"),edit_user_path(@user), class: "col-xs-12 btn btn-default" %></div>
    <% else %>
    <%= link_to "編集",user_path(current_user.id) %>
    <% end %>

    <h1>New book</h1>
    <%= form_for(@book) do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title, class: "col-xs-12" %>
     <h4>Opinion</h4>
     <%= f.text_area :body, class: "col-xs-12" %><br>
     <%= f.submit 'Create Book',class: "btn btn-primary btn-lg col-xs-12" %>
    <% end %>
   </div>
   <h1>Books</h1>
   <div class="col-xs-9">
    <table class="table table-striped">
     <thead>
      <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
      </tr>
     </thead>
     <% @newbook.each do |book| %>
     <tbody>
      <tr>
       <td><%= attachment_image_tag @user, :profile_image,  :fill, 50, 50, format: 'jpeg', fallback: "no-image-icon.jpg" %></td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
  </div>
</div>
